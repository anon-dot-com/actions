{
  "compilerOptions": {
    "paths": {
      "~/*": ["./dist/*"]
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": ["esnext"],
    "target": "esnext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "inlineSources": false,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
